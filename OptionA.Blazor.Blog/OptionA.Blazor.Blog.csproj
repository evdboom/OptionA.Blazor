<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
	<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>OptionA.Blazor.Blog</RootNamespace>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Title>Blazor Blog Components</Title>
    <Authors>Erik van der Boom</Authors>
	<IsPackable>true</IsPackable>
    <Description>Components and builders for creating a Blog using Blazor.</Description>
	<PackageProjectUrl>https://github.com/evdboom/OptionA.Blazor.Blog</PackageProjectUrl>
	<PackageLicenseExpression>MIT</PackageLicenseExpression>
	<Version>7.0.0</Version>
	<PackageReleaseNotes>
		7.0.0 Initial release of all components
	</PackageReleaseNotes>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.8" />
  </ItemGroup>

</Project>
