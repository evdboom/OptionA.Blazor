@namespace OptionA.Blazor.Blog

﻿@if (Content is not null)
{
    @switch (Content.Mode)
{
    case IconMode.Class:
        <i @attributes="@Content.GetAttributes(DataProvider)"></i>
        break;
    case IconMode.Path:
        <svg @attributes="@Content.GetAttributes(DataProvider)">
                @foreach (var path in Content.Paths)
            {
                <path d="@path" />
            }
            </svg>
        break;

}
}