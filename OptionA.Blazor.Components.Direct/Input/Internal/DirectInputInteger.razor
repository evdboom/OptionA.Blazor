@inherits Microsoft.AspNetCore.Components.Forms.InputNumber<int>
@switch (InternalMode)
{
    case BindMode.OnInput:
        <input opta-input-integer @attributes="Attributes" @bind="@CurrentValueAsString" @bind:event="oninput" @ref="_input" />
        break;
    case BindMode.OnChange:
        <input opta-input-integer @attributes="Attributes" @bind="@CurrentValueAsString" @ref="_input" />
        break;
}
