@inherits Microsoft.AspNetCore.Components.Forms.InputText
@switch (InternalMode)
{
    case BindMode.OnInput:
        <input @attributes="Attributes" @bind="@CurrentValueAsString" @bind:event="oninput" @ref="_input" />
        break;
    case BindMode.OnChange:
        <input @attributes="Attributes" @bind="@CurrentValueAsString" @ref="_input" />
        break;
}
