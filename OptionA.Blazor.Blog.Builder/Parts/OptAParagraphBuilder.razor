@using OptionA.Blazor.Blog.Builder.HelperComponents
@using OptionA.Blazor.Components
@if (Content is not null)
{
    <OptABlogComponent Name="**Paragraph**"
                       ContentChanged="ContentChanged"
                       ContentRemoved="ContentRemoved"
                       ContentIndex="ContentIndex"
                       TotalContentCount="TotalContentCount"
                       MovedUp="MovedUp"
                       MovedDown="MovedDown"
                       Content="Content"
                       CanDrag="true"
                       DragStarted="DragStarted"
                       DragEnded="DragEnded">
        <label @attributes="@GetLabelAttributes(ParagraphId)">
            <OptAChild Content="@DataProvider.GetContent(BuilderType.Label, "Value")" />
        </label>
        <OptAInputTextArea @bind-Value="Content.Content"
                           Attributes="@GetAttributes()"
                           AutoGrow="true" />
    </OptABlogComponent>
}