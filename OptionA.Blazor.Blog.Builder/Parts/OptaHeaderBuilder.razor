@using OptionA.Blazor.Blog.Builder.HelperComponents
@if (Content is not null)
{
    <OptaBlogComponent Name="**Header**"
                       ContentChanged="ContentChanged"
                       ContentRemoved="ContentRemoved"
                       ContentIndex="ContentIndex"
                       TotalContentCount="TotalContentCount"
                       MovedUp="MovedUp"
                       MovedDown="MovedDown"
                       Content="Content">
        <label @attributes="@GetLabelAttributes(SizeId)">
            <OptaChild Content="@DataProvider.GetContent(BuilderType.Label, "Size")"/>
        </label>
        <OptaEnumSelect TEnum="HeaderSize" @bind-Value="InternalSize" AdditionalAttributes="@GetSizeAttributes()"  />
        <label @attributes="@GetLabelAttributes(HeaderId)">
            <OptaChild Content="@DataProvider.GetContent(BuilderType.Label, "Value")" />
        </label>
        <DirectInputText @bind-Value="Content.Content" AdditionalAttributes="@GetHeaderAttributes()" />
    </OptaBlogComponent>
}