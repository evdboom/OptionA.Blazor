@using OptionA.Blazor.Blog.Builder.HelperComponents
@if (Content is not null)
{
    <OptaGenericParts Content="Content"
                      OnChange="OnChange"
                      OnRemove="OnRemove"
                      BuilderType="BuilderType.Paragraph"
                      Label="Paragraph">
        <DirectInputTextArea @bind-Value="Content.Content" AdditionalAttributes="@DataProvider.GetAttributes(BuilderType.Paragraph, AttributeTypes.Class | AttributeTypes.Placeholder)" />
    </OptaGenericParts> 
}