@using OptionA.Blazor.Blog.Builder.HelperComponents
@using OptionA.Blazor.Blog.Builder.Parts

<h1>New post</h1>
@if (_post is null)
{
    <div @attributes="@DataProvider.GetAttributes(BuilderType.CreatePostButtonContainer)">
        <button type="button" @onclick="CreateNewPost" @attributes="@DataProvider.GetAttributes(BuilderType.CreatePostButton)">
            <OptaChild Content="@DataProvider.GetContent(BuilderType.CreatePostButton, "Create new post")" />
        </button>
    </div>
}
else
{
    <OptaPostForm Post="_post"
                  PostChanged="OnPostChanged"
                  PostSubmitted="OnSavePost"/>
}