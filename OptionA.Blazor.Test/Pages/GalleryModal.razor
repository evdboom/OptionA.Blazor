@page "/gallery-modal"

<OptaGallery MaxThumbnailContainerHeight="50vh"
             ShowTitleOnThumbnail="true"
             Mode="GalleryMode.Modal"
             ThumbnailsPerRow="4"
             ThumbnailsPerRowMargin="10"
             MaxModalWidth="500px">
    <Images>
    @for(int i = 1; i <= 10; i++)
    {
        <OptaGalleryImage ImageNumber="@i"
                          ImageText="@i.ToString()"
                          ImageThumbnailUrl="@GetUrl(i)"
                          ImageUrl="@GetUrl(i)"/>
    }
    </Images>
</OptaGallery>