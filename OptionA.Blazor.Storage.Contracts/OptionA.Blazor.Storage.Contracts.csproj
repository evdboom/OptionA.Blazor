    <Nullable>enable</Nullable>
	<GenerateDocumentationFile>true</GenerateDocumentationFile>
	<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	<Version>1.0.0</Version>
	<LangVersion>10</LangVersion>
	<IsPackable>true</IsPackable>
	<Authors>Erik van der Boom</Authors>
	<PackageProjectUrl>https://github.com/evdboom/OptionA.Blazor.Storage</PackageProjectUrl>
	<Licence>https://licenses.nuget.org/MIT</Licence>
	<Description>Contracts and abstraction to work together with the Blazor.Storage package, without the implementations</Description>		
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="7.0.0" />
    <PackageReference Include="System.Text.Json" Version="7.0.2" />
  </ItemGroup>

</Project>
