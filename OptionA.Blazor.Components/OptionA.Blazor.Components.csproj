<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<Version>7.4.0</Version>
		<IsPackable>true</IsPackable>
		<Authors>Erik van der Boom</Authors>
		<PackageProjectUrl>https://github.com/evdboom/OptionA.Blazor</PackageProjectUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>Blazor component library with various component for use inside your Blazor application</Description>
		<PackageReleaseNotes>
			Menu items renamed to childcontent, to be able to directly use them
		</PackageReleaseNotes>
	</PropertyGroup>


	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.11" />
	</ItemGroup>

	<ItemGroup>
		<Folder Include="wwwroot\" />
		<None Include="readme.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
