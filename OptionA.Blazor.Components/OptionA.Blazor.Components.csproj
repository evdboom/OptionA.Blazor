<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
	  <TargetFramework>net7.0</TargetFramework>
	  <Nullable>enable</Nullable>
	  <ImplicitUsings>enable</ImplicitUsings>
	  <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	  <Version>7.0.6</Version>
	  <IsPackable>true</IsPackable>
	  <Authors>Erik van der Boom</Authors>
	  <PackageProjectUrl>https://github.com/evdboom/OptionA.Blazor.Components</PackageProjectUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <Description>Blazor component library with various component for use inside your Blazor application</Description>
	  <PackageReleaseNotes>
		  7.0.2 Fixed small bug for menu with child content not displaying
		  7.0.3 Menugroup link was not loading correct class from provider
		  7.0.4 Fixed dropdown closing and showing for bootstrap
		  7.0.5 Added orientation to menu
		  7.0.6 Added OnItemSelectedCallback to menu
	  </PackageReleaseNotes>
  </PropertyGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.4" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>
</Project>
