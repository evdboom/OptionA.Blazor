                    Value="@_dimensionName">
        <CascadingValue Name="@ValidDimensionsParameterName"
                        Value="@_validDimensions">
            <CascadingValue Name="@AllDimensionBreakPointsParameterName"
                            Value="@_breakPoints">
                @ChildContent
            </CascadingValue>
        </CascadingValue>
    </CascadingValue>
</CascadingValue>