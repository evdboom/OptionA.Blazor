@namespace OptionA.Blazor.Components
@inherits OptAComponent

<nav @attributes="@GetContainerAttributes()">
    <menu @attributes="@GetMenuAttributes()">
        <CascadingValue Name="MenuOrientation" Value="@Orientation">
            <CascadingValue Name="OnItemSelected" Value="@OnItemSelected">
            @if (ChildContent is not null)
            {
                    @ChildContent
            }
            </CascadingValue>
        </CascadingValue>
    </menu>
</nav>